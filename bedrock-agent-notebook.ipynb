   "source": [
    "## Step 9: Define Action Group Schema"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# OpenAPI schema for action group\n",
    "action_group_schema = {\n",
    "    \"openapi\": \"3.0.0\",\n",
    "    \"info\": {\n",
    "        \"title\": \"Product API\",\n",
    "        \"description\": \"API for interacting with product information and inventory\",\n",
    "        \"version\": \"1.0.0\"\n",
    "    },\n",
    "    \"paths\": {\n",
    "        \"/getProductDetails\": {\n",
    "            \"get\": {\n",
    "                \"summary\": \"Get product details\",\n",
    "                \"description\": \"Retrieve details about a specific product or all products\",\n",
    "                \"parameters\": [\n",
    "                    {\n",
    "                        \"name\": \"productId\",\n",
    "                        \"in\": \"query\",\n",
    "                        \"description\": \"ID of the product to retrieve (optional)\",\n",
    "                        \"required\": False,\n",
    "                        \"schema\": {\n",
    "                            \"type\": \"string\"\n",
    "                        }\n",
    "                    }\n",
    "                ],\n",
    "                \"responses\": {\n",
    "                    \"200\": {\n",
    "                        \"description\": \"Successful operation\",\n",
    "                        \"content\": {\n",
    "                            \"application/json\": {\n",
    "                                \"schema\": {\n",
    "                                    \"type\": \"object\",\n",
    "                                    \"properties\": {\n",
    "                                        \"statusCode\": {\"type\": \"integer\"},\n",
    "                                        \"product\": {\"type\": \"object\"},\n",
    "                                        \"products\": {\"type\": \"array\"}\n",
    "                                    }\n",
    "                                }\n",
    "                            }\n",
    "                        }\n",
    "                    },\n",
    "                    \"404\": {\n",
    "                        \"description\": \"Product not found\"\n",
    "                    }\n",
    "                }\n",
    "            }\n",
    "        },\n",
    "        \"/checkInventory\": {\n",
    "            \"get\": {\n",
    "                \"summary\": \"Check product inventory\",\n",
    "                \"description\": \"Check availability and stock levels for a specific product\",\n",
    "                \"parameters\": [\n",
    "                    {\n",
    "                        \"name\": \"productId\",\n",
    "                        \"in\": \"query\",\n",
    "                        \"description\": \"ID of the product to check\",\n",
    "                        \"required\": True,\n",
    "                        \"schema\": {\n",
    "                            \"type\": \"string\"\n",
    "                        }\n",
    "                    },\n",
    "                    {\n",
    "                        \"name\": \"location\",\n",
    "                        \"in\": \"query\",\n",
    "                        \"description\": \"Warehouse location (optional)\",\n",
    "                        \"required\": False,\n",
    "                        \"schema\": {\n",
    "                            \"type\": \"string\"\n",
    "                        }\n",
    "                    }\n",
    "                ],\n",
    "                \"responses\": {\n",
    "                    \"200\": {\n",
    "                        \"description\": \"Successful operation\",\n",
    "                        \"content\": {\n",
    "                            \"application/json\": {\n",
    "                                \"schema\": {\n",
    "                                    \"type\": \"object\",\n",
    "                                    \"properties\": {\n",
    "                                        \"statusCode\": {\"type\": \"integer\"},\n",
    "                                        \"inventory\": {\"type\": \"object\"}\n",
    "                                    }\n",
    "                                }\n",
    "                            }\n",
    "                        }\n",
    "                    },\n",
    "                    \"404\": {\n",
    "                        \"description\": \"Product not found\"\n",
    "                    }\n",
    "                }\n",
    "            }\n",
    "        },\n",
    "        \"/placeOrder\": {\n",
    "            \"post\": {\n",
    "                \"summary\": \"Place a product order\",\n",
    "                \"description\": \"Place an order for a specific product\",\n",
    "                \"parameters\": [\n",
    "                    {\n",
    "                        \"name\": \"productId\",\n",
    "                        \"in\": \"query\",\n",
    "                        \"description\": \"ID of the product to order\",\n",
    "                        \"required\": True,\n",
    "                        \"schema\": {\n",
    "                            \"type\": \"string\"\n",
    "                        }\n",
    "                    },\n",
    "                    {\n",
    "                        \"name\": \"quantity\",\n",
    "                        \"in\": \"query\",\n",
    "                        \"description\": \"Quantity to order\",\n",
    "                        \"required\": False,\n",
    "                        \"schema\": {\n",
    "                            \"type\": \"integer\",\n",
    "                            \"default\": 1\n",
    "                        }\n",
    "                    }\n",
    "                ],\n",
    "                \"requestBody\": {\n",
    "                    \"required\": False,\n",
    "                    \"content\": {\n",
    "                        \"application/json\": {\n",
    "                            \"schema\": {\n",
    "                                \"type\": \"object\",\n",
    "                                \"properties\": {\n",
    "                                    \"customerInfo\": {\n",
    "                                        \"type\": \"object\",\n",
    "                                        \"properties\": {\n",
    "                                            \"name\": {\"type\": \"string\"},\n",
    "                                            \"email\": {\"type\": \"string\"},\n",
    "                                            \"address\": {\"type\": \"string\"}\n",
    "                                        }\n",
    "                                    }\n",
    "                                }\n",
    "                            }\n",
    "                        }\n",
    "                    }\n",
    "                },\n",
    "                \"responses\": {\n",
    "                    \"200\": {\n",
    "                        \"description\": \"Order placed successfully\",\n",
    "                        \"content\": {\n",
    "                            \"application/json\": {\n",
    "                                \"schema\": {\n",
    "                                    \"type\": \"object\",\n",
    "                                    \"properties\": {\n",
    "                                        \"statusCode\": {\"type\": \"integer\"},\n",
    "                                        \"order\": {\"type\": \"object\"}\n",
    "                                    }\n",
    "                                }\n",
    "                            }\n",
    "                        }\n",
    "                    },\n",
    "                    \"400\": {\n",
    "                        \"description\": \"Invalid input\"\n",
    "                    }\n",
    "                }\n",
    "            }\n",
    "        }\n",
    "    }\n",
    "}\n",
    "\n",
    "# Save the schema to a temporary file\n",
    "with open('/tmp/action_group_schema.json', 'w') as f:\n",
    "    json.dump(action_group_schema, f)"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Step 10: Create Action Group for the Agent"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create an action group\n",
    "try:\n",
    "    action_group_response = bedrock_agent.create_agent_action_group(\n",
    "        actionGroupName=ACTION_GROUP_NAME,\n",
    "        description='Actions for interacting with product information and inventory',\n",
    "        apiSchema={\n",
    "            'payload': json.dumps(action_group_schema)\n",
    "        },\n",
    "        actionGroupExecutor={\n",
    "            'lambda': lambda_arn\n",
    "        }\n",
    "    )\n",
    "    action_group_id = action_group_response['agentActionGroup']['agentActionGroupId']\n",
    "    print(f\"Created action group with ID: {action_group_id}\")\n",
    "    \n",
    "except bedrock_agent.exceptions.ConflictException as e:\n",
    "    # List existing action groups\n",
    "    action_groups = bedrock_agent.list_agent_action_groups(filters={\n",
    "        'actionGroupName': {\n",
    "            'equals': ACTION_GROUP_NAME\n",
    "        }\n",
    "    })['agentActionGroupSummaries']\n",
    "    \n",
    "    if action_groups:\n",
    "        action_group_id = action_groups[0]['agentActionGroupId']\n",
    "        print(f\"Using existing action group with ID: {action_group_id}\")\n",
    "        \n",
    "        # Update the existing action group\n",
    "        bedrock_agent.update_agent_action_group(\n",
    "            agentActionGroupId=action_group_id,\n",
    "            description='Actions for interacting with product information and inventory',\n",
    "            apiSchema={\n",
    "                'payload': json.dumps(action_group_schema)\n",
    "            },\n",
    "            actionGroupExecutor={\n",
    "                'lambda': lambda_arn\n",
    "            }\n",
    "        )\n",
    "        print(f\"Updated action group: {action_group_id}\")\n",
    "    else:\n",
    "        raise Exception(\"Conflict creating action group, but couldn't find existing one\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Step 11: Create the Bedrock Agent"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create a Bedrock agent\n",
    "try:\n",
    "    agent_response = bedrock_agent.create_agent(\n",
    "        agentName=AGENT_NAME,\n",
    "        description='An agent that provides product information, checks inventory, and processes orders',\n",
    "        instruction='You are a helpful product assistant. Use the knowledge base to provide detailed information about products. When asked about inventory or orders, use the appropriate API actions.',\n",
    "        foundationModel=MODEL_ID,\n",
    "        customerEncryptionKeyArn=None,  # Use AWS-managed key\n",
    "        idleSessionTTLInSeconds=1800  # 30 minutes\n",
    "    )\n",
    "    agent_id = agent_response['agent']['agentId']\n",
    "    print(f\"Created agent with ID: {agent_id}\")\n",
    "    \n",
    "except bedrock_agent.exceptions.ServiceQuotaExceededException:\n",
    "    # If quota exceeded, try to find an existing agent\n",
    "    agents = bedrock_agent.list_agents(filters={\n",
    "        'agentName': {\n",
    "            'equals': AGENT_NAME\n",
    "        }\n",
    "    })['agentSummaries']\n",
    "    \n",
    "    if agents:\n",
    "        agent_id = agents[0]['agentId']\n",
    "        print(f\"Using existing agent with ID: {agent_id}\")\n",
    "    else:\n",
    "        raise Exception(\"Service quota exceeded and couldn't find existing agent\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Step 12: Associate Action Group and Knowledge Base with the Agent"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Associate action group with agent\n",
    "try:\n",
    "    bedrock_agent.associate_agent_action_group(\n",
    "        agentId=agent_id,\n",
    "        agentVersion='DRAFT',\n",
    "        actionGroupId=action_group_id,\n",
    "        skipResourceInUseCheck=True\n",
    "    )\n",
    "    print(f\"Associated action group {action_group_id} with agent {agent_id}\")\n",
    "except Exception as e:\n",
    "    print(f\"Error associating action group: {e}\")\n",
    "\n",
    "# Associate knowledge base with agent\n",
    "try:\n",
    "    bedrock_agent.associate_agent_knowledge_base(\n",
    "        agentId=agent_id,\n",
    "        agentVersion='DRAFT',\n",
    "        knowledgeBaseId=kb_id,\n",
    "        description='Product information knowledge base',\n",
    "        skipResourceInUseCheck=True\n",
    "    )\n",
    "    print(f\"Associated knowledge base {kb_id} with agent {agent_id}\")\n",
    "except Exception as e:\n",
    "    print(f\"Error associating knowledge base: {e}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Step 13: Prepare and Deploy the Agent"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Prepare and Deploy the agent\n",
    "try:\n",
    "    # Prepare the agent\n",
    "    prepare_response = bedrock_agent.prepare_agent(\n",
    "        agentId=agent_id,\n",
    "        agentVersion='DRAFT'\n",
    "    )\n",
    "    print(f\"Agent preparation status: {prepare_response['preparationStatus']}\")\n",
    "    \n",
    "    # Wait for preparation to complete\n",
    "    max_attempts = 20\n",
    "    attempts = 0\n",
    "    status = prepare_response['preparationStatus']\n",
    "    \n",
    "    while status == 'IN_PROGRESS' and attempts < max_attempts:\n",
    "        time.sleep(5)\n",
    "        attempts += 1\n",
    "        \n",
    "        status_response = bedrock_agent.get_agent(\n",
    "            agentId=agent_id,\n",
    "            agentVersion='DRAFT'\n",
    "        )\n",
    "        status = status_response['agent']['preparationStatus']\n",
    "        print(f\"Preparation status: {status} (Attempt {attempts}/{max_attempts})\")\n",
    "        \n",
    "        if status in ['COMPLETE', 'FAILED']:\n",
    "            break\n",
    "    \n",
    "    if status == 'COMPLETE':\n",
    "        print(\"Agent preparation completed successfully!\")\n",
    "        \n",
    "        # Create a new version of the agent\n",
    "        version_response = bedrock_agent.create_agent_version(\n",
    "            agentId=agent_id,\n",
    "            agentVersion='DRAFT'\n",
    "        )\n",
    "        version_number = version_response['agentVersion']\n",
    "        print(f\"Created agent version: {version_number}\")\n",
    "        \n",
    "        # Create an alias pointing to the new version\n",
    "        try:\n",
    "            alias_response = bedrock_agent.create_agent_alias(\n",
    "                agentId=agent_id,\n",
    "                agentAliasName='prod',\n",
    "                description='Production alias',\n",
    "                routingConfiguration=[\n",
    "                    {\n",
    "                        'agentVersion': version_number,\n",
    "                        'provisionedThroughput': None  # Use on-demand throughput\n",
    "                    }\n",
    "                ]\n",
    "            )\n",
    "            alias_id = alias_response['agentAlias']['agentAliasId']\n",
    "            print(f\"Created agent alias: {alias_id}\")\n",
    "        except bedrock_agent.exceptions.ConflictException:\n",
    "            # Update existing alias\n",
    "            aliases = bedrock_agent.list_agent_aliases(\n",
    "                agentId=agent_id,\n",
    "                filters={\n",
    "                    'agentAliasName': {\n",
    "                        'equals': 'prod'\n",
    "                    }\n",
    "                }\n",
    "            )['agentAliasSummaries']\n",
    "            \n",
    "            if aliases:\n",
    "                alias_id = aliases[0]['agentAliasId']\n",
    "                bedrock_agent.update_agent_alias(\n",
    "                    agentId=agent_id,\n",
    "                    agentAliasId=alias_id,\n",
    "                    routingConfiguration=[\n",
    "                        {\n",
    "                            'agentVersion': version_number,\n",
    "                            'provisionedThroughput': None  # Use on-demand throughput\n",
    "                        }\n",
    "                    ]\n",
    "                )\n",
    "                print(f\"Updated agent alias: {alias_id} to version {version_number}\")\n",
    "            else:\n",
    "                print(\"Couldn't find existing alias to update\")\n",
    "    else:\n",
    "        print(f\"Agent preparation failed with status: {status}\")\n",
    "        \n",
    "except Exception as e:\n",
    "    print(f\"Error preparing or deploying agent: {e}\")"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## Step 14: Test the Agent"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Function to invoke the agent\n",
    "def invoke_agent(message):\n",
    "    try:\n",
    "        # Get the alias ID for invoking the agent\n",
    "        aliases = bedrock_agent.list_agent_aliases(\n",
    "            agentId=agent_id,\n",
    "            filters={\n",
    "                'agentAliasName': {\n",
    "                    'equals': 'prod'\n",
    "                }\n",
    "            }\n",
    "        )['agentAliasSummaries']\n",
    "        \n",
    "        if not aliases:\n",
    "            return \"Error: No agent alias found\"\n",
    "        \n",
    "        alias_id = aliases[0]['agentAliasId']\n",
    "        \n",
    "        # Generate a session ID if needed\n",
    "        session_id = str(uuid.uuid4())\n",
    "        \n",
    "        response = bedrock_agent_runtime.invoke_agent(\n",
    "            agentId=agent_id,\n",
    "            agentAliasId=alias_id,\n",
    "            sessionId=session_id,\n",
    "            inputText=message\n",
    "        )\n",
    "        \n",
    "        # Extract the response\n",
    "        chunks = []\n",
    "        for event in response.get('chunk', {}).get('bytes'):\n",
    "            chunk = json.loads(event.decode('utf-8'))\n",
    "            if 'chunk' in chunk and 'content' in chunk['chunk']:\n",
    "                chunks.append(chunk['chunk']['content'][0]['text'])\n",
    "        \n",
    "        return ''.join(chunks)\n",
    "    \n",
    "    except Exception as e:\n",
    "        return f\"Error invoking agent: {str(e)}\"\n",
    "\n",
    "# Test the agent with some queries\n",
    "test_queries = [\n",
    "    \"Tell me about the Premium Coffee Maker\",\n",
    "    \"What products do you have in stock?\",\n",
    "    \"I want to buy the Air Fryer Deluxe. Is it available?\",\n",
    "    \"Place an order for the Stand Mixer Elite\"\n",
    "]\n",
    "\n",
    "# Run the test queries\n",
    "for query in test_queries:\n",
    "    print(f\"\\nQuery: {query}\")\n",
    "    response = invoke_agent(query)\n",
    "    print(f\"Response: {response}\")"
   ]
  },
