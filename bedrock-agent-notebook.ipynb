   "source": [
    "## Step 15: Clean Up Resources (Optional)\n",
    "\n",
    "If you want to clean up the resources created in this notebook, you can use the code below. Be careful as this will permanently delete resources."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Only run this cell if you want to clean up resources\n",
    "# Set this to True to enable cleanup\n",
    "ENABLE_CLEANUP = False\n",
    "\n",
    "if ENABLE_CLEANUP:\n",
    "    print(\"Starting cleanup...\")\n",
    "    \n",
    "    # Delete the agent alias\n",
    "    try:\n",
    "        aliases = bedrock_agent.list_agent_aliases(\n",
    "            agentId=agent_id,\n",
    "            filters={\n",
    "                'agentAliasName': {\n",
    "                    'equals': 'prod'\n",
    "                }\n",
    "            }\n",
    "        )['agentAliasSummaries']\n",
    "        \n",
    "        if aliases:\n",
    "            alias_id = aliases[0]['agentAliasId']\n",
    "            bedrock_agent.delete_agent_alias(\n",
    "                agentId=agent_id,\n",
    "                agentAliasId=alias_id\n",
    "            )\n",
    "            print(f\"Deleted agent alias: {alias_id}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting agent alias: {e}\")\n",
    "    \n",
    "    # Disassociate action group and knowledge base\n",
    "    try:\n",
    "        bedrock_agent.disassociate_agent_action_group(\n",
    "            agentId=agent_id,\n",
    "            agentVersion='DRAFT',\n",
    "            actionGroupId=action_group_id\n",
    "        )\n",
    "        print(f\"Disassociated action group from agent\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error disassociating action group: {e}\")\n",
    "        \n",
    "    try:\n",
    "        bedrock_agent.disassociate_agent_knowledge_base(\n",
    "            agentId=agent_id,\n",
    "            agentVersion='DRAFT',\n",
    "            knowledgeBaseId=kb_id\n",
    "        )\n",
    "        print(f\"Disassociated knowledge base from agent\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error disassociating knowledge base: {e}\")\n",
    "    \n",
    "    # Delete the agent\n",
    "    try:\n",
    "        bedrock_agent.delete_agent(\n",
    "            agentId=agent_id,\n",
    "            skipResourceInUseCheck=True\n",
    "        )\n",
    "        print(f\"Deleted agent: {agent_id}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting agent: {e}\")\n",
    "    \n",
    "    # Delete the action group\n",
    "    try:\n",
    "        bedrock_agent.delete_agent_action_group(\n",
    "            agentActionGroupId=action_group_id\n",
    "        )\n",
    "        print(f\"Deleted action group: {action_group_id}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting action group: {e}\")\n",
    "    \n",
    "    # Delete the Lambda function\n",
    "    try:\n",
    "        lambda_client.delete_function(\n",
    "            FunctionName=LAMBDA_FUNCTION_NAME\n",
    "        )\n",
    "        print(f\"Deleted Lambda function: {LAMBDA_FUNCTION_NAME}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting Lambda function: {e}\")\n",
    "    \n",
    "    # Delete the data source\n",
    "    try:\n",
    "        bedrock_agent.delete_data_source(\n",
    "            knowledgeBaseId=kb_id,\n",
    "            dataSourceId=data_source_id\n",
    "        )\n",
    "        print(f\"Deleted data source: {data_source_id}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting data source: {e}\")\n",
    "    \n",
    "    # Delete the knowledge base\n",
    "    try:\n",
    "        bedrock_agent.delete_knowledge_base(\n",
    "            knowledgeBaseId=kb_id\n",
    "        )\n",
    "        print(f\"Deleted knowledge base: {kb_id}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting knowledge base: {e}\")\n",
    "    \n",
    "    # Delete objects in S3 bucket\n",
    "    try:\n",
    "        objects = s3.list_objects_v2(Bucket=BUCKET_NAME)\n",
    "        if 'Contents' in objects:\n",
    "            for obj in objects['Contents']:\n",
    "                s3.delete_object(Bucket=BUCKET_NAME, Key=obj['Key'])\n",
    "                print(f\"Deleted S3 object: {obj['Key']}\")\n",
    "                \n",
    "        # Delete the S3 bucket\n",
    "        s3.delete_bucket(Bucket=BUCKET_NAME)\n",
    "        print(f\"Deleted S3 bucket: {BUCKET_NAME}\")\n",
    "    except Exception as e:\n",
    "        print(f\"Error deleting S3 bucket or objects: {e}\")\n",
    "    \n",
    "    # Note: We're not deleting the IAM roles as they might be used by other resources\n",
    "    print(\"Cleanup completed.\")\n",
    "else:\n",
    "    print(\"Cleanup skipped. Set ENABLE_CLEANUP = True to enable resource cleanup.\")"
   ]
  },
